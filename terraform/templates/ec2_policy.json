{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketPolicyStatus",
                "s3:ListBucketByTags",
                "s3:GetBucketWebsite",
                "s3:ListBucketVersions",
                "s3:GetBucketLogging",
                "s3:ListBucket",
                "s3:GetBucketVersioning",
                "s3:GetBucketAcl",
                "s3:GetBucketPolicy",
                "s3:ListMultipartUploadParts",
                "s3:PutObject",
                "s3:GetObjectAcl",
                "s3:GetObject",
                "s3:GetBucketCORS",
                "s3:GetObjectVersionAcl",
                "s3:GetBucketLocation",
                "s3:PutObjectAcl",
                "s3:GetObjectVersion",
                "s3:ListJobs",
                "s3:HeadBucket"
            ],
            "Resource": [
                "${aws_bucket_arn}/*",
                "${aws_bucket_arn}/"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:Describe*",
                "logs:TestMetricFilter",
                "logs:Get*",
                "logs:PutLogEvents",
                "logs:FilterLogEvents"
            ],
            "Resource": [
                "${aws_cloudwatch_logs_arn}:*:*"
            ]
        }
    ]
}